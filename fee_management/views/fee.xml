<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="fee_event_form" model="ir.ui.view">
        <field name="name">fee.management.form</field>
        <field name="model">fee.management</field>
        <field name="arch" type="xml">
            <form string="service">
                <header>

                    <button name="button_action" class="oe_highlight" type="object" string="conform"
                       />

                    <button name="%(fee_management.fee_reason_action)d" class="oe_highlight" type="action" string="Cancel"
                          />
<!--                      attrs="{'invisible':[('state', 'in',('cancel','done'))]}"-->

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>

                    <group>
                        <group>
                            <field name="customer_id"/>


                        </group>
                        <group>
                            <field name="name" />

                        </group>
                    </group>



                </sheet>
            </form>

        </field>
    </record>





















    <record id="fee_view_tree" model="ir.ui.view">
        <field name="name">fee_view.tree</field>
        <field name="model">fee.management</field>
        <field name="arch" type="xml">
            <tree string="list view">
                 <field name="customer_id"/>
            </tree>
        </field>
    </record>

    <record id="action_fee" model="ir.actions.act_window">
          <field name="name">Fee details</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">fee.management</field>
          <field name="view_mode">tree,form</field>
    </record>
</odoo>